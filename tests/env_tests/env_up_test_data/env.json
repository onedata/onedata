{
    "oneprovider_node": {
        "config": {
            "input_dir": "rel/oneprovider_node",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "ccm1": {
                "vm.args": {
                    "name": "ccm1@",
                    "setcookie": "cookie"
                },
                "sys.config": {
                    "node_type": "ccm",
                    "ccm_nodes": [ "ccm1@" ],
                    "db_nodes": [ "127.0.0.1:49161" ],
                    "workers_to_trigger_init": 1
                }
            },
            "worker1": {
                "vm.args": {
                    "name": "worker1@",
                    "setcookie": "cookie"
                },
                "sys.config": {
                    "node_type": "worker",
                    "ccm_nodes": [ "ccm1@"],
                    "db_nodes": [ "127.0.0.1:49161" ]
                }
            },
            "worker2": {
                "vm.args": {
                    "name": "worker2@",
                    "setcookie": "cookie"
                },
                "sys.config": {
                    "node_type": "worker",
                    "ccm_nodes": [ "ccm1@"],
                    "db_nodes": [ "127.0.0.1:49161" ]
                }
            }
        }
    },
    "globalregistry": {
        "config": {
            "input_dir": "rel/globalregistry",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "gr1": {
                "vm.args": {
                    "name": "gr1@",
                    "setcookie": "cookie1"
                },
                "sys.config": {
                    "db_nodes": [ "gr1db@" ],
                    "grpcert_domain": {"string" : "127.0.0.1"}
                }
            },
            "gr2": {
                "vm.args": {
                    "name": "gr2@",
                    "setcookie": "cookie2"
                },
                "sys.config": {
                    "db_nodes": [ "gr2db@" ],
                    "grpcert_domain": {"string" : "127.0.0.1"}
                }
            }
        }
    },
    "appmock": {
        "config": {
            "input_dir": "rel/appmock",
            "target_dir": "rel/test_cluster"
        },
        "nodes": {
            "appmock1": {
                "vm.args": {
                    "name": "appmock1@"
                },
                "sys.config": {
                    "app_description_file": "./example_app_description.erl"
                }
            },
            "appmock2": {
                "vm.args": {
                    "name": "appmock2@"
                },
                "sys.config": {
                    "app_description_file": "./example_app_description.erl"
                }
            }
        }
    },
    "oneclient": {
        "nodes": {
            "client1": {
                "name": "client1@",
                "op_hostname": "worker1@",
                "gr_hostname": "gr1@",
                "user_cert": "./cert.pem",
                "user_key": "./cert.pem"
            },
            "client2": {
                "name": "client2@",
                "op_hostname": "worker1@",
                "gr_hostname": "gr1@",
                "user_cert": "./cert.pem",
                "user_key": "./cert.pem"
            }
        }
    }
}
